    <tags>solution sln shared project csproj common properties props</tags>
    <releaseNotes>Initial package release.</releaseNotes>
    <developmentDependency>true</developmentDependency>
  </metadata>
  <files>
    <file src="SharedProperties.props" target="build" />
  </files>
</package>
